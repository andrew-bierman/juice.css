{
	"name": "juice.css",
	"version": "1.0.0",
	"private": true,
	"description": "A classless CSS framework inspired by Apple's design system",
	"keywords": [
		"css",
		"classless",
		"apple"
	],
	"license": "MIT",
	"author": "andrew-bierman",
	"scripts": {
		"build": "bun run scripts/build.ts",
		"check": "biome check --write",
		"check:files": "biome check --write",
		"dev": "bun src/index.html",
		"format": "biome format --write",
		"format:files": "biome format --write",
		"postinstall": "bun scripts/postinstall.ts",
		"lint": "biome lint --write",
		"lint:files": "biome lint --write",
		"pre-commit": "bun scripts/pre-commit.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@types/bun": "latest",
		"lefthook": "^2.0.4",
		"playwright": "^1.56.1",
		"sort-package-json": "^3.4.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
