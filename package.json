{
	"name": "juice.css",
	"version": "0.0.1",
	"description": "A classless CSS framework inspired by Apple's design system",
	"keywords": [
		"css",
		"classless",
		"apple"
	],
	"license": "MIT",
	"author": "andrew-bierman",
	"scripts": {
		"biome:check": "biome check --write",
		"build": "bun run scripts/build.ts",
		"check": "bun biome:check && bun check:types",
		"check:types": "tsc --noEmit",
		"dev": "bun src/index.html",
		"format": "biome format --write",
		"format:files": "biome format --write",
		"postinstall": "bun scripts/postinstall.ts",
		"lint": "biome lint --write",
		"lint:files": "biome lint --write",
		"playwright:install": "playwright install --with-deps chromium",
		"pre-commit": "bun scripts/pre-commit.ts",
		"test": "bun test tests/apple-design.test.ts tests/interactive-elements.test.ts tests/semantic-html.test.ts tests/css-best-practices.test.ts",
		"test:all": "bun test"
	},
	"dependencies": {
		"prism-themes": "^1.9.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@types/bun": "latest",
		"@types/prismjs": "^1.26.5",
		"lefthook": "^2.0.4",
		"playwright": "^1.56.1",
		"prismjs": "^1.30.0",
		"sort-package-json": "^3.4.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
